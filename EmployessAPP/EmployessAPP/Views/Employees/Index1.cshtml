@model IEnumerable<EmployessAPP.Models.EmployeeData>

@{
    ViewBag.Title = "Your info";
}

<h2>Your info</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (Session["FirstName"].ToString() == item.FirstName.ToString() && Session["LastName"].ToString() == item.LastName.ToString())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wage)
            </td>
        </tr>
        break;
    }
}
  </table>
